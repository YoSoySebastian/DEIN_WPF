<Window x:Class="Proyecto_DEIN.Principal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_DEIN"
        mc:Ignorable="d"
        Title="Principal" Height="833" Width="383"
        Background="#D9D9D9">

	<!-- ESTILO MENÚ -->
	<Window.Resources>
		<Style x:Key="MenuItemStyle" TargetType="Button">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="Foreground" Value="Black"/>
			<Setter Property="Margin" Value="0,5,0,5"/>
			<Setter Property="Padding" Value="8"/>
			<Setter Property="BorderBrush" Value="Transparent"/>
			<Setter Property="HorizontalContentAlignment" Value="Left"/>
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="Cursor" Value="Hand"/>
		</Style>
	</Window.Resources>

	<Grid>
		<Rectangle x:Name="FondoOscuro"
                   Fill="#77000000"
                   Visibility="Collapsed"
                   Panel.ZIndex="900"
                   MouseDown="CerrarMenu_Click"/>

		<Grid x:Name="MenuLateral"
		  Width="240"
		  Background="#919BB5"
		  VerticalAlignment="Stretch"
		  HorizontalAlignment="Left"
		  Panel.ZIndex="999"
		  Visibility="Collapsed"
		  RenderTransformOrigin="0,0">

			<Grid.RenderTransform>
				<TranslateTransform x:Name="MenuTransform" X="-240"/>
			</Grid.RenderTransform>

			<StackPanel Margin="20">

				<Button Background="Transparent"
						BorderBrush="Transparent"
						Click="Menu_Click"
						HorizontalAlignment="Left"
						Margin="0,0,0,20">
					<Image Source="/imagenes/menu.png" Width="26"/>
				</Button>

				<Button Style="{StaticResource MenuItemStyle}" Content="Home" Click="Home"/>
				<Button Style="{StaticResource MenuItemStyle}" Content="Pedidos" Click="Carrito_Click"/>
				<Button Style="{StaticResource MenuItemStyle}" Content="Salir" Click="Logout"/>

			</StackPanel>
		</Grid>


		<Border CornerRadius="25" Background="#D9D9D9" Panel.ZIndex="1">
			<Grid Margin="10">
				<StackPanel Orientation="Vertical" Margin="0,10,0,10">
					<Grid Height="50" Margin="0,0,0,10">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto"/>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="Auto"/>
							<ColumnDefinition Width="Auto"/>
						</Grid.ColumnDefinitions>

						<Button Grid.Column="0"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Click="Menu_Click"
                                Margin="5,0,10,0"
                                VerticalAlignment="Center"
                                Panel.ZIndex="1000">
							<Image Source="/imagenes/menu.png"
                                   Width="22" Height="22"/>
						</Button>

						<Border Grid.Column="1" Background="White" CornerRadius="15" Height="30" Margin="5,0,10,0">
							<Grid>
								<TextBox x:Name="txtBuscar"
                                         Background="Transparent"
                                         BorderBrush="Transparent"
                                         VerticalContentAlignment="Center"
                                         FontSize="13"
                                         Padding="10,0,0,0"
                                         Foreground="Black"/>

								<TextBlock Text="Buscar..."
                                           Foreground="Gray"
                                           FontSize="13"
                                           Padding="10,0,0,0"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False">
									<TextBlock.Style>
										<Style TargetType="TextBlock">
											<Setter Property="Visibility" Value="Collapsed"/>
											<Style.Triggers>
												<DataTrigger Binding="{Binding Text.Length, ElementName=txtBuscar}"
                                                             Value="0">
													<Setter Property="Visibility" Value="Visible"/>
												</DataTrigger>
											</Style.Triggers>
										</Style>
									</TextBlock.Style>
								</TextBlock>
							</Grid>
						</Border>

						<!-- CARRITO -->
						<Button Grid.Column="2"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Click="Carrito_Click"
                                Margin="10,0,10,0"
                                VerticalAlignment="Center">
							<Image Source="/imagenes/Carrito.png"
                                   Width="26" Height="26"/>
						</Button>

						<!-- PERFIL -->
						<Image Grid.Column="3"
                               Source="/imagenes/user.png"
                               Width="26" Height="26"
                               VerticalAlignment="Center"/>
					</Grid>

					<!-- CATEGORÍAS -->
					<UniformGrid Columns="2" Rows="2" Margin="0,10,0,10">
						<Border Background="White" CornerRadius="10" Margin="5" Height="80">
							<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
								<TextBlock Text="👕" FontSize="22"/>
								<TextBlock Text="Moda" FontWeight="Bold" FontSize="14"/>
							</StackPanel>
						</Border>

						<Border Background="White" CornerRadius="10" Margin="5" Height="80">
							<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
								<TextBlock Text="🎮" FontSize="22"/>
								<TextBlock Text="Gaming" FontWeight="Bold" FontSize="14"/>
							</StackPanel>
						</Border>

						<Border Background="White" CornerRadius="10" Margin="5" Height="80">
							<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
								<TextBlock Text="🍳" FontSize="22"/>
								<TextBlock Text="Cocina" FontWeight="Bold" FontSize="14"/>
							</StackPanel>
						</Border>

						<Border Background="White" CornerRadius="10" Margin="5" Height="80">
							<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
								<TextBlock Text="🏀" FontSize="22"/>
								<TextBlock Text="Deporte" FontWeight="Bold" FontSize="14"/>
							</StackPanel>
						</Border>
					</UniformGrid>

					<Separator/>

					<!-- PRODUCTO DESTACADO -->
					<Button Background="Transparent" BorderBrush="Transparent" Click="ProductoDestacado_Click">
						<Border Background="#E6E6E6" CornerRadius="15" Margin="0,10,0,10" Width="277">
							<StackPanel>
								<Image Source="/imagenes/iphone.png"
                                       Height="180"
                                       Margin="10"
                                       HorizontalAlignment="Center"/>
								<Border Background="#B1B7CE" CornerRadius="10" Margin="20,0,20,10">
									<TextBlock Text="Apple iPhone 16 de 128gb"
                                               HorizontalAlignment="Center"
                                               Foreground="White"
                                               Padding="5,3,5,3"
                                               FontWeight="SemiBold"/>
								</Border>
							</StackPanel>
						</Border>
					</Button>

					<Separator/>

					<!-- VISTOS RECIENTEMENTE -->
					<TextBlock Text="Vistos recientemente"
                               FontWeight="Bold" FontSize="14"
                               Margin="5,5,0,5"/>

					<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
						<Border Width="90" Height="90" CornerRadius="10" Background="White" Margin="5"/>
						<Border Width="90" Height="90" CornerRadius="10" Background="White" Margin="5"/>
						<Border Width="90" Height="90" CornerRadius="10" Background="White" Margin="5"/>
					</StackPanel>

				</StackPanel>
			</Grid>
		</Border>
	</Grid>
</Window>
