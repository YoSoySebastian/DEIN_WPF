<Window x:Class="Proyecto_DEIN.Principal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_DEIN"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Principal" Height="833" Width="383"
		Background="#D9D9D9">

    <Border CornerRadius="25" Background="#D9D9D9">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- Contenedor principal -->
            <StackPanel Orientation="Vertical" Margin="0,10,0,10">

                <!-- Barra superior -->
                <Grid Height="50" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>

                    <!-- Menú -->
                    <Rectangle Width="25" Height="3" Fill="Black" VerticalAlignment="Top" Margin="10,12,0,0"/>
                    <Rectangle Width="25" Height="3" Fill="Black" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <Rectangle Width="25" Height="3" Fill="Black" VerticalAlignment="Bottom" Margin="10,0,0,12"/>

                    <!-- Buscador -->
                    <Border Grid.Column="1" Background="White" CornerRadius="15" Margin="10,0,10,0" Height="30">
                        <Grid>
                            <TextBox x:Name="txtBuscar"
                             BorderBrush="Transparent"
                             Background="Transparent"
                             VerticalContentAlignment="Center"
                             FontSize="13"
                             Padding="10,0,0,0"
                             Foreground="Black"/>

                            <TextBlock Text="Buscar..."
                               Foreground="Gray"
                               FontSize="13"
                               Padding="10,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text.Length, ElementName=txtBuscar}" Value="0">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>

                    </Border>

                    <!-- Carrito -->
                    <Viewbox Grid.Column="2" Margin="5" VerticalAlignment="Center">
                        <Canvas Width="24" Height="24">
                            <Ellipse Width="20" Height="20" Stroke="Black" StrokeThickness="2"/>
                            <Line X1="5" Y1="10" X2="20" Y2="10" Stroke="Black" StrokeThickness="2"/>
                        </Canvas>
                    </Viewbox>

                    <!-- Perfil -->
                    <Ellipse Grid.Column="3" Width="30" Height="30" Fill="Gray" VerticalAlignment="Center"/>
                </Grid>


                <!-- Categorías -->
                <UniformGrid Columns="2" Rows="2" Margin="0,10,0,10">
                    <Border Background="White" CornerRadius="10" Margin="5" Height="80">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="👕" FontSize="22" HorizontalAlignment="Center"/>
                            <TextBlock Text="Moda" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="10" Margin="5" Height="80">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="🎮" FontSize="22" HorizontalAlignment="Center"/>
                            <TextBlock Text="Gaming" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="10" Margin="5" Height="80">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="🍳" FontSize="22" HorizontalAlignment="Center"/>
                            <TextBlock Text="Cocina" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="10" Margin="5" Height="80">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="🏀" FontSize="22" HorizontalAlignment="Center"/>
                            <TextBlock Text="Deporte" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <Separator/>

                <!-- Producto destacado -->
                <Border Background="#E6E6E6" CornerRadius="15" Margin="0,10,0,10" Width="277">
                    <StackPanel>
                        <Image Source="/imagenes/iphone.png" 
                               Height="180" 
                               Margin="10" 
                               HorizontalAlignment="Center"/>
                        <Border Background="#B1B7CE" CornerRadius="10" Margin="20,0,20,10">
                            <TextBlock Text="Apple iPhone 16 de 128gb" 
                                       HorizontalAlignment="Center" 
                                       Foreground="White"
                                       Padding="5,3,5,3"
                                       FontWeight="SemiBold"/>
                        </Border>
                    </StackPanel>
                </Border>

                <Separator/>

                <!-- Vistos recientemente -->
                <TextBlock Text="Vistos recientemente" 
                           FontWeight="Bold" 
                           FontSize="14"
                           Margin="5,5,0,5"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border Width="90" Height="90" CornerRadius="10" Background="White" Margin="5"/>
                    <Border Width="90" Height="90" CornerRadius="10" Background="White" Margin="5"/>
                    <Border Width="90" Height="90" CornerRadius="10" Background="White" Margin="5"/>
                </StackPanel>

            </StackPanel>
        </Grid>
    </Border>
</Window>
