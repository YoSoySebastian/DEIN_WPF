<Window x:Class="Proyecto_Interfaces.Compra"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Compra" Height="833" Width="383"
		Background="#EBEBEB" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- BARRA SUPERIOR -->
        <Border Grid.Row="0" Background="White" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="☰" FontSize="20" FontWeight="Bold" Margin="0,0,10,0"/>

                <Border Grid.Column="1" CornerRadius="5" Background="#F0F0F0" Padding="5">
                    <TextBlock Text="Buscar..." Foreground="Gray"/>
                </Border>

                <TextBlock Grid.Column="2" Text="🛒" FontSize="22" Margin="15,0,10,0"/>
                <TextBlock Grid.Column="3" Text="👤" FontSize="22"/>
            </Grid>
        </Border>

        <!-- CONTENIDO PRINCIPAL -->
        <ScrollViewer Grid.Row="1" Margin="15,10,15,10" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Datos del pedido -->
                <Border Background="White" CornerRadius="10" Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Producto: 870,99€" FontSize="14"/>
                        <TextBlock Text="Envío: 4,99€" FontSize="14"/>
                        <TextBlock Text="Importe total: 875,98€" FontWeight="Bold" FontSize="16"/>
                    </StackPanel>
                </Border>

                <!-- Pago -->
                <Border Background="White" CornerRadius="10" Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Pagado con tarjeta -" FontSize="14"/>
                        <TextBlock Text="Otros datos" FontSize="12" Foreground="Gray"/>
                    </StackPanel>
                </Border>

                <!-- Dirección -->
                <Border Background="White" CornerRadius="10" Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Entregado a X" FontSize="14" FontWeight="Bold"/>
                        <TextBlock Text="Calle x 1, Pamplona, Comunidad Foral de Navarra, 33333, España"
                                   FontSize="12" Foreground="Gray" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Producto -->
                <Border Background="White" CornerRadius="10" Padding="10" Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal">
                        <Image Width="80" Height="80" Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock Text="Apple iPhone 16 de 256Gb" FontWeight="Bold" FontSize="14" Foreground="#333333"/>
                            <TextBlock Text="870,99€" FontSize="14" Foreground="#333333"/>
                            <TextBlock Text="Entrega el jueves, 2 de octubre" FontSize="12" Foreground="Gray"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Botón comprar -->
                <Border CornerRadius="25" Background="#FFEB3B" Margin="0,20,0,0">
                    <Button Content="Comprar ahora"
                            Foreground="Black"
                            FontSize="16"
                            FontWeight="Bold"
                            Height="45"
                            BorderBrush="Transparent"
                            Background="Transparent"
                            Click="ComprarAhora_Click"/>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>