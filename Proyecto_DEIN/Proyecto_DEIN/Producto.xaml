<Window x:Class="Proyecto_Interfaces.Producto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalle del Producto" Height="833" Width="383"
        Background="#EBEBEB">
	<Window.Resources>
		<Style x:Key="MenuItemStyle" TargetType="Button">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="Foreground" Value="Black"/>
			<Setter Property="Margin" Value="0,5,0,5"/>
			<Setter Property="Padding" Value="8"/>
			<Setter Property="BorderBrush" Value="Transparent"/>
			<Setter Property="HorizontalContentAlignment" Value="Left"/>
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="Cursor" Value="Hand"/>
		</Style>
	</Window.Resources>

	<Grid>
		<Rectangle x:Name="FondoOscuro"
                   Fill="#77000000"
                   Visibility="Collapsed"
                   Panel.ZIndex="900"
                   MouseDown="CerrarMenu_Click"/>

		<Grid x:Name="MenuLateral"
              Width="240"
              Background="#919BB5"
              VerticalAlignment="Stretch"
              HorizontalAlignment="Left"
              Panel.ZIndex="999"
              Visibility="Collapsed"
              RenderTransformOrigin="0,0">

			<Grid.RenderTransform>
				<TranslateTransform x:Name="MenuTransform" X="-240"/>
			</Grid.RenderTransform>

			<StackPanel Margin="20">
				<Button Background="Transparent"
                        BorderBrush="Transparent"
                        Click="Menu_Click"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,20">
					<Image Source="/imagenes/menu.png" Width="26"/>
				</Button>

				<Button Style="{StaticResource MenuItemStyle}" Content="Home" Click="Home"/>
				<Button Style="{StaticResource MenuItemStyle}" Content="Pedidos" Click="Carrito_Click"/>
				<Button Style="{StaticResource MenuItemStyle}" Content="Salir" Click="Logout"/>
			</StackPanel>
		</Grid>

		<!-- CONTENIDO PRINCIPAL -->
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<!-- BARRA SUPERIOR -->
			<Border Grid.Row="0" Background="White" Padding="10">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition Width="Auto"/>
					</Grid.ColumnDefinitions>

					<!-- BOTÓN MENÚ -->
					<Button Grid.Column="0"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="Menu_Click"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Panel.ZIndex="1000">
						<Image Source="/imagenes/menu.png" Width="22" Height="22"/>
					</Button>

					<!-- Buscador -->
					<Border Grid.Column="1" CornerRadius="5" Background="#F0F0F0" Padding="5">
						<TextBlock Text="Buscar..." Foreground="Gray"/>
					</Border>

					<!-- CARRITO -->
					<Button Grid.Column="2"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="Carrito_Click"
                            Margin="10,0,10,0"
                            VerticalAlignment="Center">
						<Image Source="/imagenes/Carrito.png" Width="26" Height="26"/>
					</Button>

					<!-- USUARIO -->
					<Image Grid.Column="3"
                           Source="/imagenes/user.png"
                           Width="26" Height="26"/>
				</Grid>
			</Border>

			<!-- Detalle producto -->
			<StackPanel Grid.Row="1" Margin="10,15,10,10">
				<TextBlock Text="Apple iPhone 16 de 256gb" FontSize="18" FontWeight="SemiBold" Foreground="#333333"/>
				<StackPanel Orientation="Horizontal" Margin="0,5,0,0">
					<TextBlock Text="4,0" FontSize="14" Margin="0,0,5,0"/>
					<TextBlock Text="★★★★☆" FontSize="18" Foreground="#FFD700" VerticalAlignment="Center"/>
					<TextBlock Text="492 valoraciones" FontSize="14" Foreground="#666666" Margin="10,0,0,0"/>
				</StackPanel>
			</StackPanel>

			<!-- Contenido principal -->
			<Grid Grid.Row="2">
				<Grid.RowDefinitions>
					<RowDefinition Height="46.497"/>
					<RowDefinition Height="243.503"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<Image Grid.Row="0"
                       Source="/imagenes/iphone.png"
                       Height="250"
                       Width="250"
                       Margin="0,43,0,364"
                       HorizontalAlignment="Center"
                       Grid.RowSpan="3"/>

				<StackPanel Grid.Row="2" Margin="20,94,20,30" Grid.RowSpan="2">

					<!-- Precio -->
					<StackPanel Orientation="Horizontal" Margin="0,0,0,20">
						<TextBlock FontSize="36" FontWeight="Bold" Foreground="#333333">
							<Run Text="870"/>
							<Run Text="99" FontSize="18" BaselineAlignment="Top"/>
							<Run Text="€" FontSize="36"/>
						</TextBlock>
					</StackPanel>

					<!-- Opciones de capacidad -->
					<StackPanel Orientation="Horizontal" Margin="0,0,0,30" x:Name="CapacidadPanel">
						
						<Border CornerRadius="15" BorderBrush="Gray" BorderThickness="1" Margin="0,0,10,0" Background="White">
							<Button x:Name="BtnGB512" Content="512 GB" Click="Capacidad_Click"
                                    Padding="10,5"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontWeight="SemiBold"/>
						</Border>
						
						<Border CornerRadius="15" BorderBrush="#007ACC" BorderThickness="2" Margin="0,0,10,0" Background="#ADD8E6">
							<Button x:Name="BtnGB256" Content="256 GB" Click="Capacidad_Click"
                                    Padding="10,5"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontWeight="Bold"/>
						</Border>
						
						<Border CornerRadius="15" BorderBrush="Gray" BorderThickness="1" Background="White">
							<Button x:Name="BtnGB128" Content="128 GB" Click="Capacidad_Click"
                                    Padding="10,5"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontWeight="SemiBold"/>
						</Border>
					</StackPanel>

					<!-- Botones de acción -->
					<Border CornerRadius="25" Background="#FFEB3B" Margin="0,0,0,15">
						<Button Content="Añadir a la cesta"
                                Foreground="#333333"
                                FontSize="18"
                                FontWeight="Bold"
                                Height="50"
                                BorderBrush="Transparent"
                                Background="Transparent"
                                Click="AñadirCesta_Click"/>
					</Border>

					<Border CornerRadius="25" Background="#FF9800" >
						<Button Click="ComprarYa_Click"
                                Content="Comprar ya"
                                Foreground="White"
                                FontSize="18"
                                FontWeight="Bold"
                                Height="50"
                                BorderBrush="Transparent"
                                Background="Transparent"/>
					</Border>
				</StackPanel>
			</Grid>
		</Grid>
	</Grid>
</Window>
