<Window x:Class="Proyecto_Interfaces.Lista"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lista de Compras" Height="833" Width="383"
        Background="#2B2B2B" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="MenuItemStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- FONDO OSCURO DETRÁS DEL MENÚ -->
        <Rectangle x:Name="FondoOscuro"
                   Fill="#77000000"
                   Visibility="Collapsed"
                   Panel.ZIndex="900"
                   MouseDown="CerrarMenu_Click"/>

        <!-- MENÚ LATERAL DESPLEGABLE -->
        <Grid x:Name="MenuLateral"
              Width="240"
              Background="#919BB5"
              VerticalAlignment="Stretch"
              HorizontalAlignment="Left"
              Panel.ZIndex="999"
              Visibility="Collapsed"
              RenderTransformOrigin="0,0">

            <Grid.RenderTransform>
                <TranslateTransform x:Name="MenuTransform" X="-240"/>
            </Grid.RenderTransform>

            <StackPanel Margin="20">
                <Button Background="Transparent"
                        BorderBrush="Transparent"
                        Click="Menu_Click"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,20">
                    <Image Source="/imagenes/menu.png" Width="26"/>
                </Button>

                <Button Style="{StaticResource MenuItemStyle}" Content="Home" Click="Home"/>
                <Button Style="{StaticResource MenuItemStyle}" Content="Pedidos" Click="Carrito_Click"/>
                <Button Style="{StaticResource MenuItemStyle}" Content="Salir" Click="Logout"/>
            </StackPanel>
        </Grid>

        <!-- CONTENIDO PRINCIPAL -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- BARRA SUPERIOR -->
            <Border Grid.Row="0" Background="White" Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- BOTÓN MENÚ -->
                    <Button Grid.Column="0"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="Menu_Click"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Panel.ZIndex="1000">
                        <Image Source="/imagenes/menu.png" Width="22" Height="22"/>
                    </Button>

                    <!-- Buscador -->
                    <Border Grid.Column="1" CornerRadius="5" Background="#F0F0F0" Padding="5">
                        <TextBlock Text="Buscar..." Foreground="Gray"/>
                    </Border>

                    <!-- CARRITO -->
                    <Image Grid.Column="2"
                           Source="/imagenes/Carrito.png"
                           Width="26" Height="26"
                           Margin="15,0,10,0"/>

                    <!-- USUARIO -->
                    <Image Grid.Column="3"
                           Source="/imagenes/user.png"
                           Width="26" Height="26"/>
                </Grid>
            </Border>

            <!-- Contenido principal -->
            <ScrollViewer Grid.Row="1" Margin="0,10,0,0">
                <StackPanel Margin="15">

                    <!-- Botón tramitar pedido -->
                    <Border CornerRadius="25" Background="#FFEB3B" Margin="0,0,0,20">
                        <Button Content="Tramitar pedido"
                                Foreground="Black"
                                FontSize="16"
                                FontWeight="Bold"
                                Height="45"
                                BorderBrush="Transparent"
                                Background="Transparent"
                                Click="TramitarPedido_Click"/>
                    </Border>

                    <!-- Producto -->
                    <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                        <Border Background="#F2F2F2" CornerRadius="15" Padding="10">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/imagenes/iphone.png" Width="80" Height="80" Margin="0,0,10,0"/>
                                <StackPanel>
                                    <TextBlock Text="Apple iPhone 16 de 256Gb" FontWeight="Bold" FontSize="14" Foreground="#333333"/>
                                    <TextBlock Text="870,99€" FontSize="14" Foreground="#333333"/>
                                    <TextBlock Text="Entrega el jueves, 2 de octubre" FontSize="12" Foreground="Gray"/>
                                    <Border CornerRadius="10" Background="White" BorderBrush="Gray" BorderThickness="1" Margin="0,5,0,0">
                                        <Button Content="Eliminar"
                                                Background="Transparent"
                                                Foreground="Black"
                                                BorderThickness="0"
                                                FontSize="12"
                                                Width="171"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Repetir productos si es necesario -->

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
