<Window x:Class="Proyecto_Interfaces.Lista"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lista de Compras" Height="833" Width="383"
        Background="#2B2B2B" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Barra superior -->
        <Border Grid.Row="0" Background="White" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="☰" FontSize="20" FontWeight="Bold" Margin="0,0,10,0"/>

                <Border Grid.Column="1" CornerRadius="5" Background="#F0F0F0" Padding="5">
                    <TextBlock Text="Buscar..." Foreground="Gray"/>
                </Border>

                <TextBlock Grid.Column="2" Text="🛒" FontSize="22" Margin="15,0,10,0"/>
                <TextBlock Grid.Column="3" Text="👤" FontSize="22"/>
            </Grid>
        </Border>

        <!-- Contenido principal -->
        <ScrollViewer Grid.Row="1" Margin="0,10,0,0">
            <StackPanel Margin="15">

                <!-- Botón tramitar pedido -->
                <Border CornerRadius="25" Background="#FFEB3B" Margin="0,0,0,20">
                    <Button Content="Tramitar pedido"
                            Foreground="Black"
                            FontSize="16"
                            FontWeight="Bold"
                            Height="45"
                            BorderBrush="Transparent"
                            Background="Transparent"
                            Click="TramitarPedido_Click"/>
                </Border>

                <!-- Producto -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                    <Border Background="#F2F2F2" CornerRadius="15" Padding="10">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="80" Height="80" Margin="0,0,10,0"/>
                            <StackPanel>
                                <TextBlock Text="Apple iPhone 16 de 256Gb" FontWeight="Bold" FontSize="14" Foreground="#333333"/>
                                <TextBlock Text="870,99€" FontSize="14" Foreground="#333333"/>
                                <TextBlock Text="Entrega el jueves, 2 de octubre" FontSize="12" Foreground="Gray"/>
                                <Border CornerRadius="10" Background="White" BorderBrush="Gray" BorderThickness="1" Margin="0,5,0,0">
                                    <Button Content="Eliminar"
                                            Background="Transparent"
                                            Foreground="Black"
                                            BorderThickness="0"
                                            FontSize="12"
                                            Width="100"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Puedes repetir el bloque de producto más veces si quieres -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
