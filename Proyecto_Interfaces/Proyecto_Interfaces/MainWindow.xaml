<Window x:Class="Proyecto_Interfaces.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Interfaces"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="320"
        WindowStartupLocation="CenterScreen"
        Background="black">
    <Grid>
        <Border CornerRadius="25" Background="#8A93AE" Width="280" Height="560"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="220">

                <Ellipse Width="80" Height="80" Fill="#009DFF" Margin="10"/>

                <TextBlock Text="Login" FontSize="24" Foreground="White" FontWeight="Bold"
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="👤" FontSize="28" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <Border CornerRadius="15" Background="White" Height="35" Margin="0,5,0,5">
                    <TextBox x:Name="txtUsuario" BorderThickness="0" Background="Transparent"
                             VerticalContentAlignment="Center" Padding="12,0"/>
                </Border>

                <Border CornerRadius="15" Background="White" Height="35" Margin="0,5,0,15">
                    <PasswordBox x:Name="txtContrasena" BorderThickness="0" Background="Transparent"
                                 VerticalContentAlignment="Center" Padding="12,0"/>
                </Border>

                <Border Background="#009DFF" Width="100" Height="30" Margin="0,0,0,10">
                    <Button x:Name="btnLogin" Content="Login" Background="Transparent" BorderThickness="0"
                            Cursor="Hand" Click="btnLogin_Click"/>
                </Border>

                <CheckBox x:Name="chkRecordar" Content="Recordar usuario" Foreground="White" Margin="0,5,0,5"/>

                <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="White">
                    <Hyperlink>
                        ¿Has olvidado tu contraseña?
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
